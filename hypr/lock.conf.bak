$main_color = rgb(0, 0, 0)
### password box
$outline_thickness = 0
$outer_color =  rgba(0, 0, 0, 0) # won't show if (outline_thickness = 0)
$inner_color = rgba(30, 30, 46, 0.3)
$font_color = rgb(0, 0, 0)
$qoute_color = rgb(200, 200, 200)

# GENERAL
general {
    disable_loading_bar = true
    hide_cursor = true
}

# BACKGROUND
  # NOTE: for me? only works with (.png)
background {
    monitor =
    path = ~/Downloads/walls/rot_goddess.jpg
    # path = ~/Pictures/wallpapers/moon_city_lake.png
    # path = ~/Pictures/wallpapers/thunder_cloud_sea.png
    # path = ~/Pictures/wallpapers/leef_rain.png
    # path = ~/Pictures/wallpapers/moon_cloud_sea.png
    # path = ~/Pictures/wallpapers/river_buildings.png
    # path = ~/Pictures/wallpapers/the-neon-shallows.png

    color = rgba(25, 20, 20, 1.0) # fallback color

    # all these options are taken from hyprland, see https://wiki.hyprland.org/Configuring/Variables/#blur for explanations
    blur_passes = 1 # 0 disables blurring
    blur_size = 2
    noise = 0.0117
    contrast = 0.8916
    brightness = 0.7
    vibrancy = 0.1696
    vibrancy_darkness = 0.0
}

# TIME
label {
    monitor =

    text = cmd[update:30000] echo "$(date +"%R")"


    color = $main_color

    font_size = 60
    font_family = $font

    position = 0, 20
    halign = center
    valign = top
}

# DATE
label {
    monitor =

    text = cmd[update:30000] echo "$(date +"%A, %d %B %Y")"


    color = $main_color

    font_size = 40
    font_family = $font

    position = 0, -90
    halign = center
    valign = top
}

# PASSWORD BOX
input-field {
    monitor =
    size = 300, 60

    dots_size = 0.33 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.15 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    dots_rounding = -1 # -1 default circle, -2 follow input-field rounding

    outline_thickness = $outline_thickness
    outer_color = $outer_color
    inner_color = $inner_color
    font_color = $font_color

    fade_on_empty = true
    fade_timeout = 3000 # Milliseconds before fade_on_empty is triggered.

    placeholder_text = <span foreground="##ffffff99"><i>ó°Œ¾ Logged in as </i><span foreground="##ffffff99">$USER</span></span>

    hide_input = false
    rounding = -1 # -1 means complete rounding (circle/oval)

    check_color = rgb(204, 136, 34)
    fail_color = rgb(204, 34, 34) # if authentication failed, changes outer_color and fail message color
    fail_text = <i>$FAIL <b>($ATTEMPTS)</b></i> # can be set to empty
    fail_transition = 300 # transition time in ms between normal outer_color and fail_color

    capslock_color = -1
    numlock_color = -1
    bothlock_color = -1 # when both locks are active. -1 means don't change outer color (same for above)

    invert_numlock = false # change color if numlock is off
    swap_font_color = false # see below

    position = 0, -120
    halign = center
    valign = center
}

