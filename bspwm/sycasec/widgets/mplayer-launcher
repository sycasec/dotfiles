#!/usr/bin/env bash

mplayer() {
    LOCKFILE="$HOME/.cache/eww-sycasec-mplayer.lock"

if [[ ! -f "$LOCKFILE" ]]; then
    touch "$LOCKFILE"
    eww open music -c ~/.config/bspwm/sycasec/widgets/
elif [[ -f "$LOCKFILE" ]]; then
    eww close music -c ~/.config/bspwm/sycasec/widgets/
    rm "$LOCKFILE"
fi
}

mplayer
